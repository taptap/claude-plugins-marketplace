{
  "description": "启用 marketplace 插件自动更新 + 检查 CLI 工具",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/scripts/set-auto-update-plugins.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/scripts/ensure-cli-tools.sh 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
